<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:navigationIcon="@drawable/arrow_back"
        android:title="@string/article_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/second_article_title"
                android:textColor="#211E1E"
                android:textColorLink="#0B0B0B"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Неуёмное восхищение трансферной политикой «столичных» слегка непонятно."
                android:textColor="#181717"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Наверняка все понимают, что в России на данный момент самой популярной командой по ту сторону океана является «Вашингтон». Кто-то этому рад, кого-то это раздражает, но равнодушных – единицы. Чем тебе не показатель, правда?"
                android:textAlignment="textStart"
                android:textColor="#1A1818"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Именно поэтому иногда кажется, что этой командой занято чрезмерно много информационного пространства, но от этого никуда не деться. Это данность."
                android:textColor="#020202"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Многие коллеги, эксперты, болельщики отмечают прекрасную работу менеджмента «Вашингтона» летом, говоря, насколько команда стала сильнее по сравнению с прошлым сезоном. Давайте попробуем в этом разобраться."
                android:textAlignment="textStart"
                android:textColor="#101010"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/switchIsRead"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Прочитано" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>