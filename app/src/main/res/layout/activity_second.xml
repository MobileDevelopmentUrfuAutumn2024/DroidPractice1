<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:navigationIcon="@drawable/arrow_back"
        android:title="@string/article_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15.dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Досье «Чёрная канарейка» (2024)"
                android:textColor="@color/black"
                android:textSize="22.sp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:src="@drawable/share"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.Chip"></com.google.android.material.imageview.ShapeableImageView>

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8.dp"
                android:text="Чтобы спасти похищенного террористами мужа, лучший оперативник ЦРУ Эйвери Грейвс вынуждена поставить на карту все: безупречную репутацию, преданность своему делу, да и саму жизнь. Неожиданно став чужой среди своих, она поднимает связи в преступном мире, чтобы раздобыть секретную информацию, которую требуют похитители"
                android:textColor="@color/black"
                android:textSize="15.sp"></TextView>

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8.dp"
                android:text="Эйвери теперь может положиться только на свои исключительные боевые навыки в смертельной гонке за бесценными данными, способными спровоцировать глобальную катастрофу."
                android:textColor="@color/black"
                android:textSize="15.sp"></TextView>

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8.dp"
                android:text="Прочитано"
                android:textColor="@color/black"
                android:textSize="15.sp"></Switch>
        </LinearLayout>
    </ScrollView>
</LinearLayout>