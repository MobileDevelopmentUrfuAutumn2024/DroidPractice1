<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"
            android:text="Статья 2: Полезность кофе"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageViewArticle"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/coffee" />

        <TextView
            android:id="@+id/textViewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="Кофе — это не только способ проснуться, но и полезный напиток для организма. Он улучшает концентрацию, память и снижает усталость благодаря кофеину. Кофе также богат антиоксидантами, которые защищают клетки от старения и помогают бороться с воспалениями."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewContentStyled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:text="Исследования показали, что любители кофе на 20% реже страдают от депрессии. Так что чашка ароматного напитка — это не только вкусно, но и полезно для настроения!"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/switchRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="40dp"
            android:text="Отметить как прочитано" />

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вернуться"
            android:padding="12dp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:elevation="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp" />
    </LinearLayout>
</ScrollView>