<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:navigationIcon="@drawable/arrow_back"
        android:title="@string/second_article_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/second_article_left_padding"
            android:paddingRight="@dimen/second_article_right_padding">

            <TextView
                android:id="@+id/article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="@string/second_article_title"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/second_article_gap"
                android:adjustViewBounds="true"
                android:src="@drawable/snapdragon"
                android:contentDescription="@string/second_article_image_description" />

            <TextView
                android:id="@+id/article_paragraph_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/second_article_gap"
                android:text="@string/second_article_paragraph_1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/article_paragraph_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/second_article_gap"
                android:text="@string/second_article_paragraph_2"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/article_paragraph_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/second_article_gap"
                android:text="@string/second_article_paragraph_3"
                android:textStyle="bold|italic" />

            <Switch
                android:id="@+id/switch_hasRead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/second_article_gap"
                android:switchTextAppearance="@style/TextAppearance.AppCompat.Body1"
                android:text="@string/second_article_switch_text"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>