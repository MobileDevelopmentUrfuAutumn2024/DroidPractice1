<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity"
    android:padding="10dp">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="@string/article_title"
        android:navigationIcon="@drawable/arrow_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/article_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/article_title"
                android:textStyle="italic"
                android:textSize="20sp"
                android:padding="20dp"
                android:textColor="@color/black"
                >

            </TextView>

            <TextView
                android:id="@+id/text_start_second"
                android:layout_width="match_parent"
                android:text="@string/example_text"
                android:textSize="16sp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content">
            </TextView>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/photo_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.Chip"
                >
            </com.google.android.material.imageview.ShapeableImageView>
            <TextView
                android:id="@+id/text_end_second"
                android:layout_width="match_parent"
                android:text="@string/example_text"
                android:textSize="16sp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content">
            </TextView>

            <Switch
                android:id="@+id/switch_read"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/readed"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:checked="false"
                tools:ignore="UseSwitchCompatOrMaterialXml">
            </Switch>
        </LinearLayout>



    </ScrollView>

</LinearLayout>