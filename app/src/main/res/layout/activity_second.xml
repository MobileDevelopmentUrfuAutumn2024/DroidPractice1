<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="@string/article_title"
        android:navigationIcon="@drawable/arrow_back" />
    
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/article_head"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/sub_head1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sub_head1"
                android:layout_marginTop="@dimen/margin_top"
                android:textSize="@dimen/text_size" />

            <ImageView
                android:id="@+id/picture1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                tools:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text1"
                android:layout_marginTop="@dimen/margin_top"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/sub_head2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sub_head2"
                android:layout_marginTop="@dimen/margin_top"
                android:textSize="@dimen/text_size" />

            <ImageView
                android:id="@+id/picture2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                tools:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text2"
                android:layout_marginTop="@dimen/margin_top"
                android:textSize="@dimen/text_size" />
            
            <Switch
                android:id="@+id/readSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:text="@string/read_icon"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>