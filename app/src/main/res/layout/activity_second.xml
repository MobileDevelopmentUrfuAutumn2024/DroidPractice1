<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".SecondActivity">

    <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:title="@string/article_title"
            android:navigationIcon="@drawable/arrow_back" />

    <ScrollView
            android:id="@+id/secondScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

            <TextView
                android:id="@+id/title"
                style="@style/TextAppearance.M3.Sys.Typescale.TitleLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Инсайдер раскрыл параметры GeForce RTX 5090 и RTX 5080" />

            <TextView
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="До выхода видеокарт GeForce RTX 50 осталось всего около трёх месяцев, и сегодня в Сети появились подробные параметры старших моделей новой линейки" />

            <ImageView
                    android:id="@+id/photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    tools:src="@drawable/ic_launcher_background"/>

            <TextView
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/article_text"/>

            <Switch
                    android:id="@+id/switchRead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Прочитано" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>